@using HRPLO.Models;
@model List<EM_COMP>

@{
    ViewBag.Title = "Comp_Index";
    Layout = "~/Areas/AdminHome/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="main_container">
    <div class="page-title">
        <div class="title_left">
            <h3>Users <small>Some examples to get you started</small></h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Form Design <small style="color:red">@ViewBag.Message</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    @using (Html.BeginForm("Creat_Comp", "Comp"))
                    {
                        <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    @HRPLO.Resources.Global.Comp_No <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_No", null, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                    @HRPLO.Resources.Global.Comp_Name <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_Name", null, new { @class = "form-control col-md-7 col-xs-12", @required = "required", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_CN</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_CN", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.INV_ADD</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("INV_ADD", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_Boss</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_Boss", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_Tel</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_Tel", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_Fax</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_Fax", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_Mail</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_Mail", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">@HRPLO.Resources.Global.Comp_INV</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBox("Comp_INV", null, new { @class = "form-control col-md-7 col-xs-12", @readonly = "false" })
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">@HRPLO.Resources.Global.Submit</button>
                                    <button type="reset" class="btn btn-primary">@HRPLO.Resources.Global.Cancel</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Default Example <small>Users</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction function: <code>$().DataTable();</code>
                    </p>
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Detail</th>
                                <th>@HRPLO.Resources.Global.Comp_No</th>
                                <th>@HRPLO.Resources.Global.Comp_Name</th>
                                <th>@HRPLO.Resources.Global.Comp_CN</th>
                                <th>@HRPLO.Resources.Global.INV_ADD</th>
                                <th>@HRPLO.Resources.Global.Comp_Boss</th>
                                <th>@HRPLO.Resources.Global.Comp_Tel</th>
                                <th>@HRPLO.Resources.Global.Comp_Fax</th>
                                <th>@HRPLO.Resources.Global.Comp_Mail</th>
                                <th>@HRPLO.Resources.Global.Comp_INV</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr onclick="Comp_Details(this)" onload="Comp_Details(this)">
                                        <td id="comp_no">@item.COMP_NO</td>
                                        <td>@item.COMP_NAME</td>
                                        <td>@item.COMP_CN</td>
                                        <td>@item.INV_ADD</td>
                                        <td>@item.COMP_BOSS</td>
                                        <td>@item.COMP_TEL</td>
                                        <td>@item.COMP_FAX</td>
                                        <td>@item.COMP_MAIL</td>
                                        <td>@item.COMP_INV</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function Comp_Details(e) {
        document.getElementById("Comp_No").value = e.cells[0].innerHTML;
        document.getElementById("Comp_Name").value = e.cells[1].innerHTML;
        document.getElementById("Comp_CN").value = e.cells[2].innerHTML;
        document.getElementById("INV_ADD").value = e.cells[3].innerHTML;
        document.getElementById("Comp_Boss").value = e.cells[4].innerHTML;
        document.getElementById("Comp_Tel").value = e.cells[5].innerHTML;
        document.getElementById("Comp_Fax").value = e.cells[6].innerHTML;
        document.getElementById("Comp_Mail").value = e.cells[7].innerHTML;
        document.getElementById("Comp_INV").value = e.cells[8].innerHTML;
}
</script>